@require 'sliders_entrances/slideInDown'

.navigation
	position absolute
	top 0
	right 0
	left 0
	background-color #202020
	animation-duration 1s
	animation-delay .5s
	animation-fill-mode backwards
	animation-name slideInDown

	+above('lg')
		padding-top 36px
		padding-bottom 18px
		background-color transparent

	&.affix
		position fixed
		z-index 50
		padding-y(0)
		background-color #202020

.navigation__navbar
	margin-bottom 3px
	background-color #202020

	+above('lg')
		lost-center(1170px)
		background-color transparent

.navigation__toggle.collapsed
	&
	&:active
	&:focus
		background-color transparent

	&:hover
		background-color $highlight-color

.navigation__logo
	margin-left -2px
	padding-top 3px

	+above('xl')
		padding-x(0)

.navigation__links
	margin-right 0

	+above('xl')
		margin-right -15px
