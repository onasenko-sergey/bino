.pricing-card
	margin-x(auto)
	margin-bottom 70px
	padding-bottom 50px
	max-width 380px
	font-family $OpenSans
	text-align center
	background-color #f4f5f9

	+above('xl')
		margin-bottom 0

.pricing-card__header
	position relative
	background-color $highlight-color

.pricing-card__plan
	padding-top 47px
	padding-left 4px
	padding-bottom 134px
	font-size 24px
	font-weight 600
	letter-spacing .1em
	text-transform uppercase
	color #fff

.pricing-card__price
	position absolute
	left 50%
	bottom -2px
	margin-bottom -87px
	margin-left -85px
	padding-top 56px
	padding-left 5px
	width 173px
	height 174px
	font-family $SourceSansPro
	font-size 13px
	line-height 22px
	letter-spacing .05em
	background-color #fff
	background-clip padding-box
	border 10px solid rgba(244, 245, 249, .25)
	border-radius 50%

.pricing-card__price-val
	font-size 40px
	font-weight 700

.pricing-card__features
	padding-top 112px
	padding-bottom 36px
	font-size 14px
	line-height 40px
	text-transform capitalize
	letter-spacing .02em

// suppose odd cards to be gray
.pricing-card_gray
	.pricing-card__header
		background-color $light-color

	.pricing-card__button
		button-variant(#fff, $light-color, $light-color)
