.integrations
	@extends .article
	padding-top 146px
	padding-bottom 109px
	background-color #f4f5f9
	border-bottom 1px solid #d8d9db

.integrations__container
	lost-center(1170px)

.integrations__header
	@extends .article__header
	letter-spacing normal

.integrations__post-header
	@extends .article__post-header
	padding-top 20px
	padding-bottom 31px
	line-height 21px
	letter-spacing normal

.integrations__companies
	margin-top 69px

.integrations__company
	lost-column(1/2 2)
	margin-bottom 30px
	line-height 0
	background-color #fff

	+above('md')
		lost-column(1/3 3)

	+above('lg')
		lost-column(1/5 5)

	&:hover
		background-color $highlight-color

.integrations__company-logo
	max-width 100%
