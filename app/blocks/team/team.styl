.team
	@extends .article
	padding-top 146px
	background-size cover

	.not-ie &
		background-attachment fixed

	&.bg-load-on
	.no-js &
		+below('xs')
			retinaBackground(team-bg-xs, jpg)

		+above('sm')
			retinaBackground(team-bg-sm, jpg)

		+above('lg')
			retinaBackground(team-bg-md, jpg)

		+above('xl')
			retinaBackground(team-bg-lg, jpg)

.team__container
	lost-center(1170px)

.team__header
	@extends .article__header
	margin-left 5px
	color #fff

.team__post-header
	@extends .article__post-header_color_white

.team__team
	margin-top -205px
	min-height 699px

	&.bg-load-on
	.no-js &
		+above('xl')
			retinaBackground(team-curve, png)
			background-repeat no-repeat
			background-position top center
			background-size cover

.team__members
	lost-center(1180px)
	lost-clearfix()
	position relative
	padding-top 250px
	height 100%

	+above('xl')
		padding-top 150px

.team__member
	+above('sm')
		lost-column(1/2 2)

	+above('lg')
		lost-column(1/3 3)

	+above('xl')
		lost-column(1/5 5)

		&:nth-child(1)
			padding-top 227px
			padding-left 1px

		&:nth-child(2)
			margin-right 52px
			margin-left -21px
			padding-top 180px

		&:nth-child(3)
			padding-top 173px

		&:nth-child(4)
			margin-right -10px
			margin-left 36px
			padding-top 212px

		&:nth-child(5)
			margin-right -1px
			padding-top 166px
